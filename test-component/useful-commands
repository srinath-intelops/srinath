


    
# Curl commands for REST Server resource Testresource
# Post
curl -X POST -H "Content-Type: application/json" \
-d '{"Name": 1}' \
http://localhost:9995/v1/testresources

# Get
curl -X GET -H "Content-Type: application/json" \
http://localhost:9995/v1/testresources

# Put
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Name": 1}' \
http://localhost:9995/v1/testresources/123

# Put
### wrong id passed in param
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Name": 1}' \
http://localhost:9995/v1/testresources/1234

# Get  (retrieve specific Testresource)
curl -X GET -H "Content-Type: application/json" \
http://localhost:9995/v1/testresources/123

# Delete
curl -X DELETE -H "Content-Type: application/json" \
http://localhost:9995/v1/testresources/123

    

